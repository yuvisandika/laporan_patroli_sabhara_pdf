<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit2LaporanTambah"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000">

        <TextView
            android:id="@+id/d1"
            android:layout_toRightOf="@+id/di1"
            android:layout_toLeftOf="@+id/di2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Isi Data Laporan"/>
        <TextView
            android:id="@+id/txt_tgl"
            android:layout_below="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="00/00/0000"/>

        <ImageView
            android:id="@+id/di1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sabhara"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/di2"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sabhara"
            android:layout_margin="10dp"/>


    </RelativeLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--halaman 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2C000000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. 1"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="#000"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"/>

                <!--halaman 1-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                    <EditText
                        android:id="@+id/et_jam"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/btn_jam"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:editable="false"
                        android:hint="08:00"/>
                    <Button
                        android:id="@+id/btn_jam"
                        android:layout_marginTop="20dp"
                        android:layout_width="150dp"
                        android:layout_alignParentEnd="true"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:text="Pilih jam"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <!--isi-->
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_below="@id/btn_jam"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Kejadian Yang Ditemukan"/>

                    <EditText
                        android:id="@+id/et_kejadian"
                        android:layout_below="@id/txt1"
                        android:layout_marginTop="10dp"
                        android:lines="5"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Kejadian Yang Ditemukan"/>

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_below="@id/et_kejadian"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Uraian  Singkat Kejadian"/>

                    <EditText
                        android:id="@+id/et_uraian"
                        android:layout_below="@+id/txt2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:lines="5"
                        android:gravity="top"
                        android:hint="Uraian Singkat Kejadian"/>

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_below="@id/et_uraian"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Tindakan Yang Dilakukan"/>

                    <EditText
                        android:id="@+id/et_tindakan"
                        android:layout_below="@+id/txt3"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:lines="5"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tindakan Yang dilakukan"/>

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_below="@id/et_tindakan"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Keterangan"/>

                    <EditText
                        android:id="@+id/et_ket"
                        android:layout_below="@id/txt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="ket"/>

                </RelativeLayout>

            </LinearLayout>

            <!--halaman 2-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2C000000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. 2"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="#000"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"/>

                <!--halaman 1-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/et_jam2"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/btn_jam2"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:editable="false"
                        android:hint="21:00"/>

                    <Button
                        android:id="@+id/btn_jam2"
                        android:layout_marginTop="20dp"
                        android:layout_width="150dp"
                        android:layout_alignParentEnd="true"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:text="Pilih jam"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <!--isi-->
                    <TextView
                        android:id="@+id/txt12"
                        android:layout_below="@id/btn_jam2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Kejadian Yang Ditemukan"/>

                    <EditText
                        android:id="@+id/et_kejadian2"
                        android:layout_below="@id/txt12"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:lines="5"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kejadian Yang Ditemukan"/>

                    <TextView
                        android:id="@+id/txt22"
                        android:layout_below="@id/et_kejadian2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Uraian  Singkat Kejadian"/>

                    <EditText
                        android:id="@+id/et_uraian2"
                        android:layout_below="@+id/txt22"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:lines="5"
                        android:gravity="top"
                        android:hint="Uraian Singkat Kejadian"/>

                    <TextView
                        android:id="@+id/txt32"
                        android:layout_below="@id/et_uraian2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Tindakan Yang Dilakukan"/>

                    <EditText
                        android:id="@+id/et_tindakan2"
                        android:layout_below="@+id/txt32"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:lines="5"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tindakan Yang dilakukan"/>

                    <TextView
                        android:id="@+id/txt42"
                        android:layout_below="@id/et_tindakan2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="#ff0000"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Keterangan"/>

                    <EditText
                        android:id="@+id/et_ket2"
                        android:layout_below="@id/txt42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="ket"/>

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#ff0000"
                android:text="ISI DATA"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>