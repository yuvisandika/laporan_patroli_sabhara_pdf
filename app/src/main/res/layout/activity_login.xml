<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_splashscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/polisi"
            android:scaleType="centerCrop"
            android:alpha="0.5"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#000"
            android:scaleType="centerCrop"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#ff0000"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Aplikasi Pembuatan Laporan Patroli\nSatuan Sabhara Jambi"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@id/txt1"
            android:id="@+id/login_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="#fff"/>
        <ImageView
            android:layout_below="@id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/sabhara"/>


        <TextView
            android:id="@+id/txt2"
            android:layout_below="@id/login_img"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#ff0000"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Silahkan Login"/>


        <EditText
            android:id="@+id/login_id"
            android:layout_below="@+id/txt2"
            android:background="@drawable/rounded"
            android:backgroundTint="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingLeft="20dp"
            android:hint="Username"/>


        <EditText
            android:id="@+id/login_pw"
            android:layout_below="@+id/login_id"
            android:background="@drawable/rounded"
            android:backgroundTint="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:hint="Password"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_alignParentBottom="true"
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="#009933"
            android:textColor="#ffff"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="20dp"
            android:onClick="login"/>

    </RelativeLayout>

</LinearLayout>